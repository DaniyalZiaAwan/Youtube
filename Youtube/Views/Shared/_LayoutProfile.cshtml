<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <link href="~/Content/Styles/profileDesign.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Youtube", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Profile", "AddVideo", "Profile")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">

        <div class="row">
            <div class="col-sm-4">

                <ul class="list-group" id="profileList">
                    <li class="list-group-item">
                        <i class="fa fa-2x fa-dashboard"></i>
                        <a href="#">
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-2x fa-file-video-o"></i>
                        <a href="@Url.Action("AddVideo", "Profile")">
                            <span>Add Video</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <span>Empty</span>
                    </li>
                </ul>

            </div>
            <div class="col-sm-8">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
