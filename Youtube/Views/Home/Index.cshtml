@using Youtube.Models
@model Youtube.ViewModels.HomeIndexVm

@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    @foreach (var video in Model.Videos)
    {
        <div class="col-sm-3">

            <div class="panel panel-primary">
                <div class="panel-heading text-center">@video.Type</div>
                <div class="panel-body">
                    <iframe width="100%" height="150" src="@video.EmbedUrl"
                            frameborder="0" allowfullscreen></iframe>
                </div>
                <div class="panel-footer">
                    <h4><a href="@Url.Action("Single", "Videos", new { id = video.Id })">@video.Title</a></h4>
                    <h6>@video.User.Channel</h6>
                    <h6>Views - @video.DateTime.ToString("dd MMM yyyy")</h6>
                </div>
            </div>
        </div>
    }
</div>
